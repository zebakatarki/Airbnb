<% layout("/layouts/boilerplate") %>

<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const listing = <%- JSON.stringify(listing) %>;
</script>

<style>
    .show_paragraphs{
        margin-bottom: 9px;
    }
    #show_card{
        margin-bottom: 3px;
    }
</style>  

<div class="row mt-3">
    <div class="col-8 offset-3 ">
        <h3><%= listing.title %></h3>
    </div>
    <div class="card col-6 offset-3 show-card listing-card" id="show_card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
            <p class="card-text">Owned by:<i><%= listing.owner.username %></i></p>
            <p class="show_paragraphs"><%= listing.description %></p>
            <p class="show_paragraphs">&#8377;<%= listing.price.toLocaleString("en-IN")%></p>
            <p class="show_paragraphs"><%= listing.location %></p>
            <p class="show_paragraphs"><%= listing.country %></p>
        </div>
    </div>

    <% if(currentUser && listing.owner._id.equals(currentUser._id)){ %>
        <div class="btns">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn mt-2 mb-4 ">Edit</a>
            <form method="post" action="/listings/<%= listing._id %>?_method=delete">
            <button class="btn btn-dark offset-5 delete mt-2 mb-4">Delete</button>
            </form> 
            </div> 
    <% } %>
    
    <div class="col-7 offset-3 mb-3 mt-1"> 
    <% if(listing.reviews.length > 0)  {%>
    <hr/>
    <div class="row">
    <p><b>All Reviews</b></p>
    <% for(review of listing.reviews){ %>
        <div class="card col-5 ms-3 mb-3">
            <div class="card-body mt-2">
                <h5 class="card-title">@<%= review.author.username  %></h5>
                <p class="starability-result card-text" data-rating="<%= review.rating %>"></p> 
                <p class="card-text"><%= review.Comment %></p>
            </div>

            <% if(currentUser && review.author._id.equals(currentUser._id)){ %>
            <form class="mb-3 mt-2" method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=delete">
                <button class="btn btn-sm btn-dark">Delete</button>
            </form>
            <% } %>

        </div>
    <% } %>
    </div>

    <% } %>

    <form method="get" action="/listings/<%= listing._id %>/reviews"> 
        <button type="submit" class="btn btn-dark  review mt-2 mb-2"> Add Your Valuable Review </button>
    </form>

    </div>   
    <br>

    <!-- Map Div -->
    <div class="col-6 offset-3 mb-4">
        <h3>Where you'll be</h3>
        <div id="map"></div>
    </div>
</div>

<script src="/js/map.js"></script>